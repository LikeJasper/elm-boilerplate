{
  "name": "elm-boilerplate",
  "description": "A boilerplate for elm apps",
  "version": "0.5.1",
  "author": "LikeJasper <will@willclark.tech>",
  "license": "MIT",
  "homepage": "https://github.com/LikeJasper/elm-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LikeJasper/elm-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/LikeJasper/elm-boilerplate/issues"
  },
  "scripts": {
    "deploy": "git-directory-deploy --directory ./dist --repo origin --branch gh-pages",
    "predeploy:straight": "npm run clean:dist && cp -a ./dev ./dist && uglifyjs ./dist/app.js --compress --output ./dist/app.js",
    "deploy:straight": "npm run deploy",
    "predeploy:mangle": "npm run predeploy:straight -- --mangle",
    "deploy:mangle": "npm run deploy",
    "dev": "elm-server ./src/Main.elm --output ./dev/app.js",
    "lint": "eslint ./test-e2e ./scripts",
    "lint:fix": "npm run lint -- --fix",
    "api:mock": "json-server --config ./mock-api/config.json ./mock-api/db.js",
    "test:e2e": "cucumber-js ./features --compiler js:babel-core/register -r ./test-e2e/support -r ./test-e2e/step-definitions || true",
    "test:e2e:now": "cucumber-js ./features --compiler js:babel-core/register -r ./test-e2e/support -r ./test-e2e/step-definitions --tags @now || true",
    "test:e2e:single": "npm run test:e2e",
    "test:e2e:watch": "nodemon --watch ./dev --watch ./features --watch ./test-e2e --ext js,feature,html --exec 'npm run test:e2e:now'",
    "test:e2e:watch:all": "nodemon --watch ./dev --watch ./features --watch ./test-e2e --ext js,feature,html --exec 'npm run test:e2e:single'",
    "test:unit:single": "npm run clean:test && FILE=./temp/$(uuidgen).test.js && elm-make ./test-unit/TestRunner.elm --output $FILE && node -r ./scripts/workaround-elm-test-and-navigation.js $FILE; RESULT=$?; rm -f $FILE;",
    "test:unit:watch": "nodemon --watch ./src --watch ./test-unit --ext elm --exec 'npm run test:unit:single'",
    "clean:test": "rm ./temp/*.test.js || true",
    "clean:dist": "rm -r ./dist || true",
    "clean:dev": "rm -r ./dev",
    "clean:ui": "rm -r ./dev/ui",
    "build:ui": "cd ./ui && gulp build && cd .. || cd ..",
    "predev:prepare": "npm run clean:dev || true",
    "dev:prepare": "mkdir ./dev && npm run dev:prepare:html && npm run dev:prepare:ui",
    "dev:prepare:html": "cp ./skeleton.html ./dev/index.html",
    "dev:prepare:ui": "npm run build:ui",
    "ncu": "ncu --upgrade",
    "ncu:all": "ncu --upgradeAll",
    "postinstall": "elm package install -y && npm run dev:prepare",
    "commitmsg": "node ./scripts/validate-commit-msg.js"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "bluebird": "^3.4.6",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "cucumber": "^1.3.0",
    "elm": "^0.17.1",
    "elm-server": "^1.0.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.0.0",
    "eslint-plugin-import": "^1.14.0",
    "eslint-plugin-jsx-a11y": "^2.2.1",
    "eslint-plugin-react": "^6.2.0",
    "git-directory-deploy": "^1.5.1",
    "husky": "^0.11.7",
    "json-server": "^0.8.19",
    "less": "^2.7.1",
    "nightmare": "^2.7.0",
    "nodemon": "^1.10.2",
    "npm-check-updates": "^2.8.0",
    "pretty-error": "^2.0.0",
    "semantic-ui": "^2.2.4"
  }
}
