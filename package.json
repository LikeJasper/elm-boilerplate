{
  "name": "elm-boilerplate",
  "description": "A boilerplate for elm apps",
  "version": "0.1.0",
  "author": "LikeJasper <will@willclark.tech>",
  "license": "MIT",
  "homepage": "https://github.com/LikeJasper/elm-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LikeJasper/elm-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/LikeJasper/elm-boilerplate/issues"
  },
  "scripts": {
    "deploy": "git-directory-deploy --directory dev --branch gh-pages",
    "dev": "elm-server ./src/Main.elm --output ./dev/app.js",
    "lint": "eslint ./features ./scripts",
    "lint:fix": "npm run lint -- --fix",
    "test:e2e": "cucumber-js ./features -r ./test-e2e/support -r ./test-e2e/step-definitions || true",
    "test:e2e:now": "cucumber-js ./features --compiler js:babel-core/register -r ./test-e2e/support -r ./test-e2e/step-definitions --tags @now || true",
    "test:e2e:single": "npm run test:e2e",
    "test:e2e:watch": "nodemon --watch ./dev --watch ./features --watch ./test-e2e --ext js,feature,html --exec 'npm run test:e2e:now'",
    "test:unit:single": "npm run clean:test && FILE=./temp/$(uuidgen).test.js && elm-make ./test-unit/TestRunner.elm --output $FILE && node $FILE; RESULT=$?; rm -f $FILE;",
    "test:unit:watch": "nodemon --watch ./src --watch ./test-unit --ext elm --exec 'npm run test:unit:single'",
    "clean:test": "rm ./temp/*.test.js || true",
    "clean:dev": "rm -r ./dev",
    "clean:ui": "rm -r ./dev/ui",
    "build:ui": "cd ./semantic && gulp build && cd .. || cd ..",
    "predev:prepare": "npm run clean:dev || true",
    "dev:prepare": "mkdir ./dev && npm run dev:prepare:html && npm run dev:prepare:ui",
    "dev:prepare:html": "cp ./skeleton.html ./dev/index.html",
    "dev:prepare:ui": "npm run build:ui",
    "ncu": "ncu",
    "postinstall": "elm package install -y",
    "commitmsg": "babel-node ./scripts/validate-commit-msg.js"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-export-extensions": "^6.8.0",
    "babel-preset-es2015": "^6.9.0",
    "bluebird": "^3.4.1",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "cucumber": "^1.0.0",
    "elm": "^0.17.0",
    "elm-server": "^1.0.0",
    "eslint": "^3.1.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.4.2",
    "eslint-plugin-react": "^5.1.1",
    "git-directory-deploy": "^1.5.0",
    "husky": "^0.11.4",
    "less": "^2.7.1",
    "nightmare": "^2.5.2",
    "nodemon": "^1.9.2",
    "npm-check-updates": "^2.6.7",
    "pretty-error": "^2.0.0",
    "semantic-ui": "^2.1.8"
  }
}
