{
  "name": "elm-boilerplate",
  "description": "A boilerplate for elm apps",
  "version": "0.1.0",
  "author": "LikeJasper <will@willclark.tech>",
  "license": "MIT",
  "homepage": "https://github.com/LikeJasper/elm-boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LikeJasper/elm-boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/LikeJasper/elm-boilerplate/issues"
  },
  "scripts": {
    "dev": "elm-server elm/Main.elm --output dev/app.js",
    "lint": "eslint ./features",
    "lint:fix": "npm run lint -- --fix",
    "test:e2e": "cucumber-js ./features || true",
    "test:e2e:now": "cucumber-js ./features --compiler js:babel-core/register --tags @now || true",
    "test:e2e:single": "npm run test:e2e",
    "test:e2e:watch": "nodemon --watch dev --watch features --ext js,html --exec 'npm run test:e2e:now'",
    "test:elm:single": "FILE=$(mktemp $(uuidgen).js) && elm-make elm-test/TestRunner.elm --output $FILE && node $FILE; RESULT=$?; rm -f $FILE;",
    "test:elm:watch": "nodemon --watch 'elm/' --watch 'elm-test/' --ext elm --exec 'npm run test:elm:single'",
    "clean:dev": "rm -r dev",
    "clean:ui": "rm -r dev/ui",
    "build:ui": "cd semantic && gulp build && cd .. || cd ..",
    "dev:prepare": "npm run clean:dev && mkdir dev && npm run dev:prepare:html && npm run dev:prepare:ui",
    "dev:prepare:html": "cp skeleton.html dev/index.html",
    "dev:prepare:ui": "npm run build:ui",
    "ncu": "ncu",
    "postinstall": "elm package install -y"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "cucumber": "^1.0.0",
    "elm": "^0.17.0",
    "elm-server": "^1.0.0",
    "eslint": "^2.12.0",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.4.2",
    "eslint-plugin-react": "^5.1.1",
    "less": "^2.7.1",
    "nodemon": "^1.9.2",
    "npm-check-updates": "^2.6.7",
    "semantic-ui": "^2.1.8",
    "zombie": "^4.2.1"
  }
}
